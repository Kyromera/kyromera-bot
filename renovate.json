{
  "extends": ["config:base"],
  "labels": ["dependencies"],
  "dependencyDashboard": true,
  "enabledManagers": ["gradle"],
  "gradle": {
    "enabled": true,
    "fileMatch": ["(^|/)build.gradle.kts$"]
  },
  "packageRules": [
    {
      "matchManagers": ["gradle"],
      "automerge": true,
      "separateMinorPatch": true
    },
    {
      "matchManagers": ["gradle"],
      "matchPackagePatterns": ["^org\\.jetbrains\\.kotlin"],
      "groupName": "Kotlin (stdlib, reflect, serialization)"
    },
    {
      "matchManagers": ["gradle"],
      "matchPackagePatterns": ["^org\\.jetbrains\\.exposed"],
      "groupName": "Exposed ORM"
    },
    {
      "matchManagers": ["gradle"],
      "matchPackagePatterns": ["^io\\.ktor"],
      "groupName": "Ktor Framework"
    },
    {
      "matchManagers": ["gradle"],
      "matchPackagePatterns": ["^org\\.flywaydb"],
      "groupName": "Flyway DB"
    },
    {
      "matchManagers": ["gradle"],
      "matchPackagePatterns": ["^org\\.postgresql"],
      "groupName": "PostgreSQL Driver"
    },
    {
      "matchManagers": ["gradle"],
      "matchPackagePatterns": ["^net\\.dv8tion"],
      "groupName": "JDA (Discord API)"
    },
    {
      "matchManagers": ["gradle"],
      "matchPackagePatterns": ["^com\\.google\\.code\\.gson"],
      "groupName": "Gson"
    },
    {
      "matchManagers": ["gradle"],
      "matchPackagePatterns": ["^io\\.lettuce", "^org\\.apache\\.commons"],
      "groupName": "Redis & Apache Commons"
    },
    {
      "matchManagers": ["gradle"],
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "Minor and patch dependency updates"
    }
  ],
  "rebaseWhen": "conflicted"
}
